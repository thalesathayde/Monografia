evasao(A,B) :-
   cor_aluno(A,'Parda'), classe_idade_aluno(A,'A').
evasao(A,B) :-
   cor_aluno(A,'N?o Declarado'), tem_facebook(A,0), cidade(A,'Rio de Janeiro').
evasao(A,B) :-
   genero_aluno(A,'M'), classe_idade_aluno(A,'C').
evasao(A,B) :-
   cidade(A,'Vila Velha').
evasao(A,B) :-
   cor_aluno(A,'Negra'), cidade(A,'Rio de Janeiro').
evasao(A,B) :-
   ano_semestre_ingresso(A,C,D), resultado_aluno_turma(A,reprovado,E,F,C,D), cidade(A,'S?o Goncalo').
evasao(A,B) :-
   classe_idade_aluno(A,'D').
