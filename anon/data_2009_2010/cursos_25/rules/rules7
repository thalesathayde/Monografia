evasao(A,B) :-
   genero_aluno(A,'M'), ano_semestre_ingresso(A,C,D), resultado_aluno_turma(A,reprovado,E,F,C,D).
evasao(A,B) :-
   genero_aluno(A,'F').
evasao(A,B) :-
   cor_aluno(A,'N?o Declarado'), genero_aluno(A,'M'), tem_facebook(A,0).
evasao(A,B) :-
   cor_aluno(A,'Parda'), tem_facebook(A,0), cidade(A,'S?o Goncalo').
evasao(A,B) :-
   genero_aluno(A,'M'), cidade(A,'Rio de Janeiro'), classe_idade_aluno(A,'B').
