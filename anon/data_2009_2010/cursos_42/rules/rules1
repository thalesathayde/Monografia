evasao(A,B) :-
   genero_aluno(A,'M'), tem_facebook(A,0), cidade(A,'Rio de Janeiro'), classe_idade_aluno(A,'A').
evasao(A,B) :-
   cor_aluno(A,'N?o Declarado'), genero_aluno(A,'M'), cidade(A,'Rio de Janeiro'), classe_idade_aluno(A,'B').
evasao(A,B) :-
   genero_aluno(A,'M'), classe_idade_aluno(A,'C').
evasao(A,B) :-
   cor_aluno(A,'Amarela'), genero_aluno(A,'M').
evasao(A,B) :-
   classe_idade_aluno(A,'E').
