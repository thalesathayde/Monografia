evasao(A,B) :-
   cor_aluno(A,'Branca'), genero_aluno(A,'M').
evasao(A,B) :-
   estado_civil(A,'Solteiro(a)'), ano_semestre_ingresso(A,C,D), resultado_aluno_turma(A,reprovado,E,F,C,D), tem_facebook(A,0).
evasao(A,B) :-
   cor_aluno(A,'Parda').
evasao(A,B) :-
   genero_aluno(A,'F').
evasao(A,B) :-
   cor_aluno(A,'N?o Declarado'), genero_aluno(A,'M').
evasao(A,B) :-
   cor_aluno(A,'Negra').
