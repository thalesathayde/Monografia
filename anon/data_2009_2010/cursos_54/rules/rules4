evasao(A,B) :-
   ano_semestre_ingresso(A,C,D), resultado_aluno_turma(A,reprovado,E,F,C,D), resultado_aluno_turma(A,aprovado,G,F,C,D).
evasao(A,B) :-
   tem_facebook(A,0), cidade(A,'Rio de Janeiro').
evasao(A,B) :-
   classe_idade_aluno(A,'C').
evasao(A,B) :-
   genero_aluno(A,'F'), cidade(A,'S?o Goncalo').
evasao(A,B) :-
   estado_civil(A,'').
